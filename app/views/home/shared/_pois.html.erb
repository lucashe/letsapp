<% if pois.any? %>

<% pois.in_groups_of(4,false) do |poi_row| %>

<div class="row">

	<% for poi in poi_row %>

	<div id="poi_<%= poi.id %>" class="col-sm-3">
		<div class="panel-heading">
			<h4 class="panel-title text-center"><%= poi.name%></h4>
		</div>
		<div class="panel panel-default panel-no-bottom-margin thumbnail">
			<%= link_to image_tag(poi.logo_url(:thumbnail)), poi_path(poi) if poi.logo? %>
		</div>
		<div class="panel-footer text-center">
			<a href="#like"><span class="glyphicon glyphicon-heart"></span></a>
			<a href="#star"><span class="glyphicon glyphicon-map-marker"></span></a>
		</div>

	</div>

	<%end%>

</div>

<% end %>

<% end %>

